<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link rel="stylesheet" href="{{ asset('assets/css/base.css') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <nav class="navbar">
        <img class="logo" src='{{ asset('assets/img/arosajeLogoLight.png') }}' alt="logo">
        <ul class="nav-list">
            {% if  route != "app_main" %}
                <li class="nav-item"><a href="/">Accueil</a></li>
            {% endif %}
            {% if  not app.user %}
                <li class="nav-item">Connexion</li>
            {% endif %}
            <li class="nav-item" style="margin-left: 12%"></li>
            {% if app.user  and   route != "app_profile" %}
                <li class="nav-item" style="margin-left: 12%" ><a href="{{ path('app_profile') }}">Profile</a></li>
            {% endif %}
        </ul>
    </nav>
        {% block body %}

        {% endblock %}
    </body>
</html>
