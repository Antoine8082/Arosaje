{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/plant.css') }}">
{% endblock %}
{% block title %}Modifier une plante{% endblock %}

{% block body %}
    {% set imagePath = '/uploads/images/' ~ plant.image %}
    <h1>Modifier une plante</h1>
    {{ form_start(plantForm) }}
    {{ form_row(plantForm.label) }}
    {{ form_row(plantForm.advice) }}
    <img src="{{ imagePath }}" alt="plant" style="width: 50px; height: 50px">
    {{ form_row(plantForm.valider) }}
    {{ form_end(plantForm) }}
{% endblock %}